<div class="container-lg my-5 border p-3">
  <form class="form-group" id="editPostForm">
    <h2>Edit Post</h2>
    <label class="h4" for="editPostTitle">Title:</label>
    <br>
    <input class="form-control" id="editPostTitle" type="text" name="editPostTitle" value="{{title}}">
    <br>
    <label class="h4" for="editPostDescription">Description:</label>
    <br>
    <textarea class="form-control" name="editPostDescription" id="editPostDescription" cols="30" rows="10">{{description}}</textarea>
    <br><br>
    <input class="btn btn-light py-1" type="submit" value="Update Post">
    <br>
    <button class="btn btn-light mt-4 py-1" id="deletePostButton">Delete Post</button>
  </form>
</div>

<script src="/js/editDeletePost.js"></script>