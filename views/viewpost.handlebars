<div class="container-lg my-5 border p-3">
  <div class="row">
    <h2 class="col">
      {{title}}
    </h2>
      <p class="col m-0 d-flex justify-content-end align-items-center">Posted by {{user.username}} on {{format_date date_posted}}</p>
  </div>
  <div>
    <p class="p-3">
      {{description}}
    </p>
  </div>
  <div class="mt-3">
    <a class="btn btn-light" href="/comment/{{id}}" role="button">Make a comment</a>
  </div>
</div>
{{#each comments as |comment| }}
  <div class="container-lg my-5 border p-3">
    <p class="m-3">
      {{comment.description}}
    </p>
    <p class="ml-3 mb-0">
      - Posted by {{comment.user.username}} on {{format_date comment.date_posted}}
    </p>
  </div>
{{/each}}